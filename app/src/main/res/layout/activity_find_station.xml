<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_icon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/mazot_logo_top" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topPanel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/findStationT"
            android:textColor="@color/findStationT"
            android:textSize="25sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fuelPanel"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/topText"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewFuel"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:text="@string/carFuelT"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rgCarFuel"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbGasoline"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rd_button_left_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/fuelGasolineRB"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/rbDiesel"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rd_button_middle_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/fuelDieselRB"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/rbLPG"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rd_button_right_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/fuelLPGrb"
                    android:textColor="@color/white" />

            </RadioGroup>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stCriteria"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/fuelPanel"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewCriteria"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:text="@string/stationCriteria"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp">


                <CheckBox
                    android:id="@+id/cbLowPrice"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:button="@drawable/cb_low_price_background" />

                <CheckBox
                    android:id="@+id/cbDistance"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:button="@drawable/cb_distance_background" />

                <CheckBox
                    android:id="@+id/cbBestToilet"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:button="@drawable/cb_wc_background" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="80dp"
                    android:text="@string/lowPriceCB"
                    android:layout_marginLeft="45dp"
                    android:textSize="20sp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="100dp"
                    android:text="@string/distanceCB"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="140dp"
                    android:text="@string/toiletCB"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:layout_height="30dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stArrays"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/stCriteria"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewArray"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:text="@string/facilityCriteria"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp">

                <Spinner
                    android:id="@+id/spStationFacility"
                    android:layout_width="170dp"
                    android:layout_height="30dp" />

                <Spinner
                    android:id="@+id/spStationBrands"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/stArrays"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btnFindStation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/button_oval"
            android:text="@string/findStationB"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

