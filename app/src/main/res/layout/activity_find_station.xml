<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/top_color"
        android:layout_alignParentTop="true"
        android:id="@+id/topPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:src="@drawable/mazot_logo_top"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/topPanel"
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textStyle="italic|bold"
            android:text="@string/findStationT"
            android:textSize="40sp"
            android:textColor="@color/findStationT"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/topText"
        android:id="@+id/fuelPanel"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewFuel"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            card_view:cardCornerRadius="30dp">

            <TextView
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:text="@string/carFuelT"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_height="30dp" />
            <RadioGroup
                android:id="@+id/rgCarFuel"
                android:layout_width="350dp"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <RadioButton
                    android:id="@+id/rbGasoline"
                    android:background="@drawable/rd_button_left_background"
                    android:button="@android:color/transparent"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:text="@string/fuelGasolineRB"
                    android:layout_height="60dp" />
                <RadioButton
                    android:id="@+id/rbDiesel"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:background="@drawable/rd_button_middle_background"
                    android:button="@android:color/transparent"
                    android:text="@string/fuelDieselRB"
                    android:layout_height="60dp" />
                <RadioButton
                    android:id="@+id/rbLPG"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/rd_button_right_background"
                    android:button="@android:color/transparent"
                    android:layout_width="100dp"
                    android:text="@string/fuelLPGrb"
                    android:layout_height="60dp" />

            </RadioGroup>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stCriteria"
        android:layout_below="@+id/fuelPanel"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewCriteria"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            card_view:cardCornerRadius="30dp">

            <TextView
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:text="@string/stationCriteria"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_height="30dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">


                <CheckBox
                    android:id="@+id/cbLowPrice"
                    android:layout_width="60dp"
                    android:button="@drawable/cb_low_price_background"
                    android:layout_height="60dp" />

                <CheckBox
                    android:id="@+id/cbDistance"
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:button="@drawable/cb_distance_background"
                    android:layout_height="60dp" />

                <CheckBox
                    android:id="@+id/cbBestToilet"
                    android:layout_marginLeft="40dp"
                    android:layout_width="60dp"
                    android:button="@drawable/cb_wc_background"
                    android:layout_height="60dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/stCriteria"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/stArrays"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_viewArray"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            card_view:cardCornerRadius="30dp">

            <TextView
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:text="@string/stationCriteria"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spStationFacility"
                    android:layout_width="130dp"
                    android:layout_height="30dp" />
                <Spinner
                    android:id="@+id/spStationBrands"
                    android:layout_marginLeft="70dp"
                    android:layout_width="130dp"
                    android:layout_height="30dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/stArrays"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="25dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnFindStation"
            android:layout_width="match_parent"
            android:background="@drawable/button_oval"
            android:text="@string/findStationB"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_height="45dp" />

    </LinearLayout>

</RelativeLayout>

